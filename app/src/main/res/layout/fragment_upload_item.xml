<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50143F"
    android:orientation="vertical"
    tools:context=".UploadItemFragment">


    <VideoView
        android:id="@+id/videoView_uploadF"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:layout_constraintDimensionRatio="16:9"

        />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="name" />

            <EditText
                android:id="@+id/ed_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="price"
                android:inputType="number" />
        </LinearLayout>


        <EditText
            android:id="@+id/ed_category"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="category" />

        <EditText
            android:id="@+id/ed_description"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="description" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:columnCount="2">

            <ImageButton
                android:id="@+id/ib_gallery"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_gallery" />

            <ImageButton
                android:id="@+id/ib_camera"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/icon_camera"

                />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="gallery" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:hint="camera" />

        </GridLayout>

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            />

        <ImageButton
            android:id="@+id/ib_upload"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/icon_upload"
            android:src="@drawable/icon_upload"
            android:layout_gravity="center"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="upload"
            />


</LinearLayout>